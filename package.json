{
  "name": "udx-worker",
  "version": "0.0.1",
  "type": "module",
  "description": "A CLI tool for managing UDX Worker tasks.",
  "main": "./.worker-dev-cli/index.js",
  "keywords": [
    "cli",
    "development",
    "tooling",
    "udx",
    "worker"
  ],
  "config": {
    "environment": {
      "container_name": "udx-worker",
      "user": "udx-worker",
      "volumes": [
        "./:/home/app"
      ]
    },
    "compose_template": "./.worker-dev-cli/docker-compose.template",
    "compose_path": "./docker-compose.yml"
  },
  "author": "Your Name",
  "license": "ISC",
  "bin": {
    "udx-worker": "./.worker-dev-cli/index.js"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "docker-compose": "^0.24.6",
    "lodash": "^4.17.21",
    "nopt": "^7.2.0",
    "prompt": "^1.3.0",
    "yaml": "^2.4.1"
  },
  "scripts": {
    "start": "node ./.worker-dev-cli/index.js",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!chalk).+\\.js$"
    ]
  }
}
